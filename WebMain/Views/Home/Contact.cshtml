@section AddToHead
{
    <style>
        #map-canvas {
            height: 370px;
            width: 100%;
            padding-top: 20px;
        }
    </style>
}

<h3>_________________</h3>

<div class="container">
    <h3 class="text-center">Розташування медичних лабораторій в місті Києві</h3>
        <div class="row" style="padding-top: 20px;">
            <div class="col-sm-8 col-md-8">
                <h4>Пошук всіх лабораторій однієї фірми</h4>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Get, new { @class = "form-inline", @id = "searchFormLabs" }))
                {
                    <label for="labName" class="control-label">Назва медичної лабораторії: </label>
                    <select name="labName" class="form-control" onchange=" processLabNameChange(this) ">
                        <option></option>
                        <option>Synevo</option>
                        <option>Dila</option>
                        <option>DNK</option>
                        <option>Bioplus</option>
                        <option>ULDC</option>
                        <option>Nikolab</option>
                        <option>Medlabtest</option>
                    </select>
                }
                <br />
                <div id="map-canvas">

                </div>
            </div>
            <div class="col-sm-4 col-md-4">
                <h4>Пошук найближчої медичної лабораторії</h4>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Get, new { @class = "form-inline", @id = "searchForm" }))
                {
                    <label for="searchInput" class="sr-only">Адреса: </label>
                    <input name="searchInput" class="form-control" placeholder="Адреса" style="width: 78%" />
                    <input type="button" value="Пошук" class="btn btn-default" onclick=" processSearchForm(this) " style="width: 20%"/>
                }
                <br/>
                <h3>Результати пошуку: </h3>
                <ol id="searchResults" style="padding-left: 20px; margin-top: 0"></ol>
            </div>
        </div>
    </div>

@section scripts
{
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="~/Scripts/searchLabUtils.js"></script>
}