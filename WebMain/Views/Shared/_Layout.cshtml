<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - НАУ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined(("AddToHead")))
    {
        @RenderSection("AddToHead", false)
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"
         style="background-color: silver;  border-color: silver;">





        <div class="container">


            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>


            <h3>
            <div class="navbar-collapse collapse"
                 style="background-color: indigo;  border-color: silver;">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ГОЛОВНА", "Index", "Home")</li>
                    <li>@Html.ActionLink("ВАРТІСТЬ", "About", "Home")</li>
                    <li>
                        @Html.ActionLink("МІСЦЕЗНАХОДЖЕННЯ", "Contact", "Home")
                    </li>
                </ul>
            </div>
                </h3>


    </div>
</div>




<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>

        <h4>

            <p>Роботу виконав: Іванов Петро Сергійович</p>

            <p>&copy; @DateTime.Now.Year - НАЦІОНАЛЬНИЙ АВІАЦІЙНИЙ УНІВЕРСИТЕТ</p>
            </h4>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
